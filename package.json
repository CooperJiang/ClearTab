{
  "name": "cleartab",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:watch": "NODE_ENV=development npm run build -- --watch",
    "build": "tsc -b && vite build && npm run copy-manifest",
    "copy-manifest": "cp public/manifest.json dist/ && cp -r public/icons dist/ && cp public/favicon* dist/ 2>/dev/null || true",
    "lint": "eslint .",
    "preview": "vite preview",
    "pack:chrome": "bash scripts/build-chrome.sh",
    "pack:firefox": "bash scripts/build-firefox.sh"
  },
  "dependencies": {
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "framer-motion": "^12.23.25",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-window": "^1.8.11",
    "uuid": "^13.0.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.32",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "hot-reload-extension-vite": "^1.0.13",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
